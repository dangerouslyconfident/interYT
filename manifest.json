{
    "manifest_version": 3,
    "name": "interYT",
    "version": "0.5.0",
    "description": "Ask questions about YouTube video transcripts, get AI-powered summaries, export to PDF, and share insights using Google Gemini.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "options_page": "settings.html",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "host_permissions": [
        "https://generativelanguage.googleapis.com/"
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/watch*",
                "*://*.youtube.com/shorts/*",
                "*://*.youtube.com/live/*"
            ],
            "js": ["content.js"]
        }
    ]
}
